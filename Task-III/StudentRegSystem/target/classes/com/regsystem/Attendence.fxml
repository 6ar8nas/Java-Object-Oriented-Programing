<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.regsystem.controllers.AttendenceController">
   <children>
      <MenuBar fx:id="menuBar">
         <menus>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#openAbout" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label alignment="CENTER" prefHeight="34.0" prefWidth="640.0" text="Fill in the students' attendence information">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Separator prefHeight="16.0" prefWidth="640.0" />
      <HBox alignment="BOTTOM_CENTER" prefHeight="309.0" prefWidth="640.0" spacing="400.0">
         <children>
            <Button mnemonicParsing="false" onAction="#getBack" text="Back" />
            <Button mnemonicParsing="false" onAction="#submit" text="Submit" />
         </children>
         <padding>
            <Insets bottom="15.0" />
         </padding>
      </HBox>
   </children>
</VBox>
